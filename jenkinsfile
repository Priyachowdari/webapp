pipeline {
    agent any
parameters { 
         string(name: 'tomcat_dev', defaultValue: '18.217.25.176', description: 'Staging Server')
         string(name: 'tomcat_qa', defaultValue: '52.14.87.203', description: 'Qa Server')
        
    } 

    triggers {
         pollSCM('* * * * *') // Polling Source Control
     }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package' 
                }
                post {
                  success
                  {
                    echo 'Now Archiving...'
                          archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage('Deploy') {
         steps {
                        sh "pwd && ls -la"
                        
                        sh "sudo scp -i /Repo1/devops.pem ./target/*.war ec2-user@${params.tomcat_dev}:/opt/apache-tomcat-7.0.53/webapps"
                         sh "sudo scp -i /Repo1/devops.pem ./target/*.war ec2-user@${params.tomcat_dev}:/opt/apache-tomcat-7.0.53/webapps"
                    }
               }
    }
}
